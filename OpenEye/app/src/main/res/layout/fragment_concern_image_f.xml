<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <ImageView
            android:id="@+id/iv_concern_fragment_back_f"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/ic_action_detail_back" />

        <!--<Button-->
            <!--android:layout_width="130dp"-->
            <!--android:layout_height="130dp"-->
            <!--android:layout_centerInParent="true"-->
            <!--android:background="@mipmap/action_start" />-->

        <fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard
            android:id="@+id/iv_concern_fragment_feed_f"
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY" />


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_concern_fragment_background_f"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="83dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="282dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_concern_fragment_title_f"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginLeft="14dp"
                        android:layout_marginTop="21dp"
                        android:textColor="#ffffff"
                        android:textSize="17dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="14dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/tv_concern_fragment_category_f"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#ffffff"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/tv_concern_fragment_releaseTime_f"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:textColor="#ffffff"
                            android:textSize="14dp" />

                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:src="@mipmap/ic_action_up_white_small" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="337dp"
                android:layout_height="95dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="35dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_concern_fragment_description_f"
                    android:layout_width="337dp"
                    android:layout_height="95dp"
                    android:textColor="#ffffff"
                    android:textSize="12dp"
                    android:visibility="visible" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/btn_concern_fragment_collectionCount_f"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/selection_detail_favour_sel"
                    android:button="@null"></CheckBox>

                <TextView
                    android:id="@+id/tv_concern_fragment_collectionCount_f"
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:textColor="#ffffff"
                    android:textSize="12dp" />

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginTop="13dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_action_share_without_padding" />

                <TextView
                    android:id="@+id/tv_concern_fragment_shareCount_f"
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="15dp"
                    android:textColor="#ffffff"
                    android:textSize="12dp" />

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_action_reply_nopadding" />

                <TextView
                    android:id="@+id/tv_concern_fragment_replyCount_f"
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#ffffff"
                    android:textSize="12dp" />


                <ImageView
                    android:id="@+id/iv_fragment_padding_f"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_action_offline_without_padding" />

                <TextView
                    android:id="@+id/tv_concern_fragment_offline_f"
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:text="缓存"
                    android:textColor="#ffffff"
                    android:textSize="12dp" />

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>