<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard
            android:id="@+id/iv_detail_fragment_feed_d"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="205dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/selection_detail_background_d"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="83dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="282dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                        <com.eueh.openeye.selection.selectiontool.FadeInTextView
                            android:id="@+id/tv_detail_fragment_title_d"
                            android:layout_width="wrap_content"
                            android:layout_height="22dp"

                            android:layout_marginLeft="14dp"
                            android:layout_marginTop="21dp"
                            android:textColor="#ffffff"
                            android:textSize="17dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="14dp"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">


                            <com.eueh.openeye.selection.selectiontool.FadeInTextView
                                android:id="@+id/tv_detail_fragment_categor_d"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />


                            <TextView
                                android:id="@+id/tv_detail_fragment_releaseTime_d"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"


                                android:layout_marginLeft="5dp"
                                android:textColor="#ffffff"
                                android:textSize="14dp" />


                        </LinearLayout>

                    </LinearLayout>


                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:background="@null"

                        android:text=">"
                        android:textColor="@color/white"

                        ></Button>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="337dp"
                    android:layout_height="95dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="35dp"
                    android:orientation="vertical">

                    <!--  description -->


                    <TextView
                        android:id="@+id/tv_detail_fragment_description_d"
                        android:layout_width="337dp"
                        android:layout_height="95dp"
                        android:textColor="#ffffff"
                        android:textSize="12dp"
                        android:visibility="visible" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/btn_detail_fragment_collectionCount_d"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/selection_detail_favour_sel"
                        android:button="@null"></CheckBox>

                    <TextView
                        android:id="@+id/tv_detail_fragment_collectionCount_d"
                        android:layout_width="30dp"
                        android:layout_height="25dp"
                        android:textColor="#ffffff"
                        android:textSize="12dp" />

                    <ImageView

                        android:id="@+id/iv_find_share"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginTop="13dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/ic_action_share_without_padding" />

                    <TextView
                        android:id="@+id/tv_detail_fragment_shareCount_d"
                        android:layout_width="30dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="15dp"
                        android:textColor="#ffffff"
                        android:textSize="12dp" />

                    <ImageView


                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/ic_action_reply_nopadding" />

                    <TextView
                        android:id="@+id/tv_detail_fragment_replyCount_d"
                        android:layout_width="30dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="#ffffff"
                        android:textSize="12dp" />


                    <ImageView
                        android:id="@+id/iv_download"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/ic_action_offline_without_padding" />

                    <TextView
                        android:id="@+id/tv_detail_fragment_offline_d"
                        android:layout_width="30dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="10dp"
                        android:text="缓存"
                        android:textColor="#ffffff"
                        android:textSize="12dp" />

                </LinearLayout>

            </LinearLayout>


        </RelativeLayout>
    </FrameLayout>

</FrameLayout>