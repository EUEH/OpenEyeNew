<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="209dp">

    <ImageView
        android:id="@+id/iv_item_share_feed_f"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/tv_item_share_title_f"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:textColor="#ffffff"
        android:textSize="17dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_item_share_category_f"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="137dp"
        android:layout_marginTop="110dp"
        android:textColor="#ffffff"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/tv_item_share_latest_release_share_f"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="189dp"
        android:layout_marginTop="110dp"
        android:textColor="#ffffff"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/tv_item_share_name_f"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:gravity="center"
        android:textColor="#ffffff"
        android:layout_below="@+id/tv_item_share_latest_release_share_f"/>
</RelativeLayout>