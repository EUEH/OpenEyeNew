<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/selection_supplement_vg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/selection_supplement_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#60000000"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/selection_supplement_iv"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content" />


    </LinearLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/selection_supplement_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/selection_supplement_ed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="输入想要生成二维码的内容"
            android:textSize="15dp" />

    </android.support.design.widget.TextInputLayout>


    <Button
        android:layout_marginTop="50dp"
        android:id="@+id/selection_supplement_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="点击生成二维码"/>


</RelativeLayout>