<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_item_videocollectionwithcover_selection_cover_d"
        android:layout_width="match_parent"
        android:layout_height="209dp"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#ededed"></LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/iv_item_videocollectionwithcover_selection_rv_d"
        android:layout_width="match_parent"
        android:layout_height="212dp"
        android:background="#ffffff"></android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="#ededed"></LinearLayout>

</LinearLayout>